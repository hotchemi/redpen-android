<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height_mainfragment">

        <EditText
                android:id="@+id/input_edittext"
                android:layout_marginTop="@dimen/edittext_vertical_margin"
                android:layout_marginLeft="@dimen/edittext_horizonal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/hint_edittext_mainfragment"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>