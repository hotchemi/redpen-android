<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height_mainfragment">

        <EditText
                android:id="@+id/document_edittext"
                android:layout_marginTop="@dimen/edittext_vertical_margin"
                android:layout_marginLeft="@dimen/edittext_horizonal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/hint_edittext_mainfragment"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>